@page
@model Proiect_web_Frizerie.Pages.Appointments.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Stylist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].DataOra)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@if (Model.Appointment != null)
        {
            @foreach (var item in Model.Appointment) 
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Client.NumeComplet)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Stylist.NumeComplet)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Service.Denumire)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataOra)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }           
        }
        else 
        {
            <p>Nu exista programari disponibile</p>
        }
       
    </tbody>
</table>
